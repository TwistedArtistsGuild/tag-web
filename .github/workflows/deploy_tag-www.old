# Docs for the Azure Web Apps Deploy action: https://github.com/Azure/webapps-deploy
# More GitHub Actions for Azure: https://github.com/Azure/actions

name: B&D to TAG-WWW (Prod)

on:
  push:
    branches:
      - deploy
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: read # This is required for actions/checkout
    steps:
      - uses: actions/checkout@v4

      - name: Set up Node.js version
        uses: actions/setup-node@v3
        with:
          node-version: '22.x'

      - name: npm install, build, and test
        run: |
          npm install
          npm run build
          npm run test --if-present

      - name: Create deployment package
        run: |
          mkdir deploy_package
          cp -r .next deploy_package/
          cp -r public deploy_package/
          cp package.json deploy_package/
          cp package-lock.json deploy_package/ # Include package-lock.json for consistent dependency resolution
          cp next.config.js deploy_package/
          # Copy node_modules if your Next.js app requires them to be present in the deployed package
          # If Azure App Service is configured to run npm install on deployment, you might not need this.
          # However, for pre-built Next.js apps, including them is often safer.
          cp -r node_modules deploy_package/
          # Copy other config files if they are needed at runtime (e.g., for server-side CSS processing)
          cp postcss.config.js deploy_package/
          cp tailwind.config.js deploy_package/
          cp jsconfig.json deploy_package/ # if needed for runtime configuration

      - name: Zip deployment package
        run: zip -r release.zip deploy_package/

      - name: Upload artifact for deployment job
        uses: actions/upload-artifact@v4
        with:
          name: node-app
          path: release.zip

  deploy:
    runs-on: ubuntu-latest
    needs: build
    permissions:
      id-token: write # This is required for requesting the JWT
      contents: read # This is required for actions/checkout
    steps:
      - name: Download artifact from build job
        uses: actions/download-artifact@v4
        with:
          name: node-app

      - name: Unzip artifact for deployment
        run: unzip release.zip

      - name: Login to Azure
        uses: azure/login@v2
        with:
          client-id: ${{ secrets.AZUREAPPSERVICE_CLIENTID_991D5E1994F940939B2D913E4DB877D7 }}
          tenant-id: ${{ secrets.AZUREAPPSERVICE_TENANTID_D1974F2DD63943F3ADB65AC06E7056EE }}
          subscription-id: ${{ secrets.AZUREAPPSERVICE_SUBSCRIPTIONID_A6C2DE625DCB461891AD21FA57CEFFD2 }}

      - name: 'Deploy to Azure Web App'
        id: deploy-to-webapp
        uses: azure/webapps-deploy@v3
        with:
          app-name: 'tag-www'
          slot-name: 'Production'
          package: deploy_package # Point to the directory created by unzipping the artifact